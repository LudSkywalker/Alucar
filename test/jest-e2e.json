{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testTimeout": 30000,
  "moduleNameMapper": {
    "@app/payment-system/(.*)": "<rootDir>/../libs/payment-system/src/$1",
    "@app/payment-system": "<rootDir>/../libs/payment-system/src"
  }
}